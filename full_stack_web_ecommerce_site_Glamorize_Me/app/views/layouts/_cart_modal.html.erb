<div class="modal fade" id="shoppingCartModal" tabindex="-1" aria-labelledby="shoppingCartModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <!-- Modal header -->
      <div class="modal-header">
        <h5 class="modal-title" id="shoppingCartModalLabel">Your Shopping Cart</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <% if current_cart.cart_items.any? %>
          <% current_cart.cart_items.each do |cart_item| %>
            <p><%= cart_item.product.name %> x <%= cart_item.quantity %></p>
            <!-- Add buttons or links for changing quantity or removing items -->
          <% end %>
        <% else %>
          <p>Your cart is empty.</p>
        <% end %>
      </div>
      <!-- Modal footer -->
      <div class="modal-footer">
        <%= link_to 'Checkout', new_order_path, class: 'btn btn-primary' %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
