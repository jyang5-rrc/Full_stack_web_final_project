<div class="container pb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h3 class="card-title text-center mb-4 font-weight-bold">Sign up</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group text-center mb-3">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control mx-auto', autofocus: true, placeholder: "Full name", style: "max-width: 500px;"  %>
            </div>

            <div class="form-group text-center mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mx-auto', placeholder: "Enter email", style: "max-width: 500px;" %>
            </div>

            <div class="form-group text-center mb-3">
                <%= f.label :gender %>
                <%= f.select :gender, ['Male', 'Female', 'Other'], {class: 'form-control mx-auto'}, style: "max-width: 500px;"  %>
              </div>

            <div class="form-group text-center mb-3">
              <%= f.label :default_address %>
              <%= f.text_field :default_address, class: 'form-control mx-auto', placeholder: "Address", style: "max-width: 500px;"  %>
            </div>

            <div class="form-group text-center mb-3">
                <%= f.label :default_city, "City" %>
                <%= f.text_field :default_city, class: 'form-control mx-auto', placeholder: "City", style: "max-width: 500px;" %>
              </div>

            <div class="form-group text-center mb-3">
              <%= f.label :default_state, "State" %>
              <%= f.text_field :default_state, class: 'form-control mx-auto', placeholder: "State", style: "max-width: 500px;" %>
            </div>

            <div class="form-group text-center mb-3">
              <%= f.label :default_country, "Country" %>
              <%= f.text_field :default_country, class: 'form-control mx-auto', placeholder: "Country", style: "max-width: 500px;" %>
            </div>

            <div class="form-group text-center mb-3">
              <%= f.label :default_postcode, "Postcode" %>
              <%= f.text_field :default_postcode, class: 'form-control mx-auto', placeholder: "Postcode", style: "max-width: 500px;" %>
            </div>

            <div class="form-group text-center mb-3 pl-5">
              <%= f.label :password, class: 'form-label' %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">
                  (6 characters minimum)
                </small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mx-auto', placeholder: "Password", style: "max-width: 500px;" %>
            </div>

            <div class="form-group text-center mb-4">
              <%= f.label :password_confirmation, class: 'form-label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mx-auto', placeholder: "Confirm password", style: "max-width: 500px;" %>
            </div>

            <div class="text-center">
              <%= f.submit "Sign up", class: 'btn btn-primary btn-lg', style: "width: 300px;" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p>If you have an account, please <%= render "devise/shared/links" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



